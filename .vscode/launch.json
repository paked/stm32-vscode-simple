    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & debug",
            "cwd": "${workspaceRoot}",
            "executable": "program.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32L476VG",
            "preLaunchTask": "build",
            "postLaunchCommands": [
                "-break-insert -t main"
            ],
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32l4x.cfg"
            ],
            "svdFile": ".vscode/STM32L4x6.svd",
            "runToMain": true
        },
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "Build & debug (emulator)",
            "cwd": "${workspaceRoot}",
            "device": "STM32L476VG",
            "executable": "program.elf",
            "servertype": "qemu",
            "preLaunchTask": "build",
            "serverpath": ".comp2300/discoserver",
            "postLaunchCommands": [
                "-break-insert -t main"
            ]
        }
    ]
}
